<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlertDialogCustom" parent="AppTheme">
        <item name="android:background">@drawable/fondo_rosas</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="lv_mapas_list">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="row_negocios_textos">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="texto_de_registro">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="texto_gridview_carrito">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="texto_alertdialog_carrito_confirmar">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="detalles_fotos_descripcion_texto_de_detalles">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="texto_para_ingresar_direccion">
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="texto_para_ingresar_tipo_de_domicilio">
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="texview_inflado_al_tablelayout" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/negro</item>
    </style>

</resources>
