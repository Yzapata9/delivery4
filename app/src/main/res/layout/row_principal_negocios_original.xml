<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/input_outline"
        android:orientation="horizontal"
        android:padding="3dp">

        <FrameLayout
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_margin="3dp"
            android:layout_weight=".5">

            <ImageView
                android:id="@+id/post_image_negocios"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/prueba" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                android:src="@drawable/fondo_para_las_fotos" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="3">


            <TextView
                android:id="@+id/post_titlee"
                style="@style/lv_mapas_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="negocio"
                android:textSize="21sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    style="@style/row_negocios_textos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Rubro= "
                    android:textColor="@color/gris"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/post_rubro"
                    style="@style/row_negocios_textos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="rubro"
                    android:textColor="@color/negro"
                    android:textSize="16sp" />


            </LinearLayout>


            <TextView
                android:id="@+id/post_horario"
                style="@style/row_negocios_textos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center"
                android:text="horario"
                android:textColor="@color/gris"
                android:textSize="16sp"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>